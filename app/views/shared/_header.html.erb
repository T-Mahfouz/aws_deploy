<header>
  <div class="menu-bar u-d-flex u-align-item-center d-done-at-md u-justify-content-space-between <%= is_arabic? ? 'text-right-custom': '' %>">

    <div class="menu-items-container u-d-flex u-justify-content-space-between u-flex-1">
      <div class="logo-container u-d-flex u-justify-content-center">
        <div class="header-img-color">
          <a href="<%= root_path %>">
          <%=image_tag 'logoWhi.png', class: 'logo-img' %>
          </a>
        </div>
<!--        <img src="https://bridge133.qodeinteractive.com/wp-content/uploads/2018/01/main-logo.jpg" alt="Logo" class="logo-image">-->
      </div>
      <div class="menu-items-center u-flex-1 menu-item-mob">
      <div class="menu-items u-d-flex ">
        <div class="menu-item <%= params[:action] === 'index' ? 'active': nil %>" >
         <a href="<%= root_path %>"> <%= t :home %> </a>
        </div>
<!--        <div class="menu-item">Treatment</div>-->
        <div class="menu-item <%= params[:action] === 'about' ? 'active': nil %>"><a href="<%= about_path %>"><%= t :about_us %> </a> </div>
        <div class="menu-item <%= params[:action] === 'contact' ? 'active': nil %>"><a href="<%= contact_path%>"><%= t :contact %> </a></div>
      </div>
      </div>
      <div class="menu-item-right u-d-flex u-align-item-center">
        <div class="phone-container" style="opacity: 0">
          <div class="icon-container ">
            <i class="fa fa-phone fa-rotate-270 fa-lg"></i>
            <span> Call US</span>
            <span class="active">1-677-124-44227</span>
          </div>
        </div>

        <div class="depricon-icon menu-item-icon">
         <%=image_tag (is_arabic? ? 'egypt-flag-xs.png' : 'united-states-of-america-flag-xs.png') ,class: 'menu-flag'%>
        </div>
        <div>
          <select class="language-controller language-change" id="language-change">

            <option value="en">English</option>

            <option value="ar">Arabic</option>
          </select>
        </div>
      </div>
    </div>
  </div>
<!-- <Mobile-header>-->
  <nav class="navbar navbar-expand-lg navbar-light bg-white nav-bar-mobile d-md-none">
    <button class="navbar-toggler botton-nav-bar" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <i class="fa fa-bars fa-lg fa-black-color"></i>
    </button>
    <div class="header-img-color-md">
    <a class="navbar-brand" href="<%= root_path %>">
      <%=image_tag 'logoWhi.png', class: 'logo-image-md' %>
<!--      <img src="https://bridge133.qodeinteractive.com/wp-content/uploads/2018/01/main-logo.jpg" alt="Logo" class="logo-image-md">-->

    </a>
    </div>
    <div class="collapse navbar-collapse nav-bar-collapse-data" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link nav-link-mb" href="<%= root_path %>"><%= t :home %> </a>
        </li>
        <li class="nav-item">
          <a class="nav-link nav-link-mb" href="<%= about_path %>"><%= t :about_us %> </a>
        </li>
        <li class="nav-item">
          <a class="nav-link nav-link-mb nav-link-mb-b-0" href="<%= contact_path%>"> <%= t :contact %></a>
        </li>

      </ul>
    </div>
    <div class="align-right">
      <%=image_tag (is_arabic? ? 'egypt-flag-xs.png' : 'united-states-of-america-flag-xs.png') ,class: 'menu-flag'%>

      <select class="language-controller language-change" id="language-change">

        <option value="en">English</option>

        <option value="ar">Arabic</option>
      </select>
    </div>
  </nav>

</header>
